<div class="list">

  <h2 class="list_title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field registrations_item">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :"registrations_item-detail" %>
    </div>

    <div class="field registrations_item">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "off", class: :"registrations_item-detail" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field registrations_item">
        <%= f.check_box :remember_me %>
        <%= f.label "保存する" %>
      </div>
    <% end -%>

    <div class="actions registrations_item">
      <%= f.submit "ログイン", remote: true %>
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %> -->

</div>
